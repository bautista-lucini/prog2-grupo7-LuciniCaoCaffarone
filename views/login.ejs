<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Include Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form method="POST" action="/users/login">
				<label for="usuario">Email:</label>
				<input type="email" id="email" name="email" required><br><br>
				<% if (locals.errors && errors.email) { %>
					<p class="feedback"><%= errors.email.msg %></p>
				<% } %>
				<label for="contraseña">Contraseña:</label>
				<input type="password" id="contraseña" name="contraseña" required><br><br>
				<% if (locals.errors && errors.contraseña) { %>
					<p class="feedback"><%= errors.contraseña.msg %></p>
				<% } %>
				<input type="checkbox" id="recordarme" name="recordarme">
				<!--<% if (locals.errors && errors.recordarme) { %>
					<p class="feedback"><%= errors.recordarme.msg %></p>
				<% } %>-->
				<label for="recordarme">Recordarme</label><br><br>
				<button type="submit">Iniciar sesión</button>
			</form>
			</h2>
		</div>
	</div>

<%- include("./partials/footer") %>
	
</body>

</html>