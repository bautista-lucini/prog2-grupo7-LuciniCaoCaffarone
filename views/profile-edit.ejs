<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (locals.user != null) { %>
		<%-include('./partials/headerLogueado', { info: user }) %>
	 <% } else { %>
		<%- include('./partials/header', { info: user }) %>
	 <% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form method="POST" action="/users/update/<%= usuario.id%>">
					<label for="name">Nombre:</label><br><br>
					<input value="<%= usuario.nombre%>" type="text" id="name" name="name" required ><br> <br>
					<% if (locals.errors && errors.name) { %>
						<p class="feedback"><%= errors.name.msg %></p>
					<% } %> 

					<label for="email">Email:</label><br><br>
					<input value="<%= usuario.email%>" type="email" id="email" name="email" required ><br> <br>
					<% if (locals.errors && errors.email) { %>
						<p class="feedback"><%= errors.email.msg %></p>
					<% } %>    
					
					<label for="usuario" class="padding">Usuario:</label><br><br>
					<input value="<%= usuario.usuario%>" type="text" id="usuario" name="usuario" required><br><br>
					<% if (locals.errors && errors.usuario) { %>
						<p class="feedback"><%= errors.usuario.msg %></p>
					<% } %>  
					
					<label for="contraseña">Contraseña:</label><br><br>
					<input  type="password" id="contraseña" name="contraseña" ><br><br>
					<% if (locals.errors && errors.contraseña) { %>
						<p class="feedback"><%= errors.contraseña.msg %></p>
					<% } %> 
					
					<label for="fechaNacimiento">Fecha de nacimiento:</label><br><br>
					<input value="<%= usuario.fecha%>" type="date" id="fechaNacimiento" name="fechaNacimiento" required><br><br>
					<% if (locals.errors && errors.fechaNacimiento) { %>
						<p class="feedback"><%= errors.fechaNacimiento.msg %></p>
					<% } %>

					<label for="nroDocumento">Número de documento:</label><br><br>
					<input value="<%= usuario.dni%>" type="number" id="nroDocumento" name="nroDocumento" required><br><br>
					<% if (locals.errors && errors.nroDocumento) { %>
						<p class="feedback"><%= errors.nroDocumento.msg %></p>
					<% } %>         
			   
				 <button type="submit">Editar</button>
				</form> 
			</h2>
		</div>
	</div>

<%- include("./partials/footer") %>
	
</body>

</html>