<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado",{info:info}) %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		

		
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= "<%= info.usuario.foto_perfil %>" alt="foto de perfil" class="foto-perfil">
			</div>

		
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= info.usuario.nombre %>
						<a href="/users/edit/<%= info.usuario.id %>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= info.usuario.email %></li>
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
		
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < info.productos.length ; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= info.productos[i].id%>">
							<figure class="product-box_image">
								<img src="<%= info.productos[i].imagen_producto %>" alt="producto">
							</figure>
							<article class="product-box_data">
								<h2><%= info.productos[i].nombre_producto %></h2>
								<p><%= info.productos[i].descripcion_producto %></p>
								
							</article>
						</a>
					</section>
				</div>
			<% } %>
		
		</div>
	</div>
	<!-- /Mis productos -->


	<%- include("./partials/footer") %>
</body>	
</html>